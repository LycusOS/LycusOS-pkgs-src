pkgname=lycusos-installer
pkgver=0.1
pkgrel=0
pkgdesc='LycusOS installer'
arch=('any')
license=('GPL3')

source=(
  ${pkgname}
)

sha512sums=('b8e3adbe488ae6a6c2bd440118137c3fa0cbffe6efb28c853a46315ddca57ac7d0f98ec87c92cd61d8857db01a83775ae613fba90c07a93d7e7812b3b4b53477')

package() {
  install -Dm755 ${pkgname} $pkgdir/usr/bin/${pkgname}
}
